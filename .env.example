# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here  # optional, enables server-side RLS bypass

# Hedera Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.xxxxx
HEDERA_PRIVATE_KEY=302e020100...your_private_key_here

# HCS & HTS (Auto-populated by npm run setup:hedera)
HCS_TOPIC_ID=0.0.yyyyy
HTS_TOKEN_ID=0.0.zzzzz

# Application
JWT_SECRET=your_jwt_secret_min_32_chars_recommended
NEXT_PUBLIC_HASHSCAN_BASE=https://hashscan.io/testnet
HEDERA_MOCK=true  # optional; when true or creds missing, blockchain ops are mocked
